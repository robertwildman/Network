<h1>Listing status</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Link</th>
      <th>Time from post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= link_to status.user.full_name, profile_path(status.user.profile_name) %></td>
        <td><%= status.content %></td>
        <td><%= status.link %></td>
        <td><%= link_to time_ago_in_words(status.created_at) + " ago", status %> </td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
<% if user_signed_in? %>
  <%= current_user.profile_name %>
  <%= link_to 'Logout', logout_path %>
<% else %>
  <%= link_to 'Login', login_path %>
  <%= link_to 'Register', register_path %>
<% end %>
 <ul>
<% @user.friends.each do |friend| %>

  <li>friend.profile_name</li>
<% end %>
  </ul>